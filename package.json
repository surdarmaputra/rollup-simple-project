{
  "name": "rollup-simple-project",
  "version": "1.0.0",
  "description": "Rollup simple project boilerplate",
  "main": "index.js",
  "author": "sdarmaputra",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "start": "serve -l 10009",
    "dev": "npm-run-all --parallel build:watch start",
    "lint": "eslint ./src --fix && stylelint ./src/**/*.{css,scss} --fix ; exit 0",
    "format": "prettier ./src/**/* --write",
    "lint:format": "yarn lint && yarn format ; exit 0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint --fix",
        "prettier --write",
        "git add"
      ],
      "*.css": [
        "stylelint --fix",
        "git add"
      ],
      "*.scss": [
        "stylelint --syntax scss --fix",
        "git add"
      ]
    }
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.10",
    "node-sass": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.2",
    "rollup": "^2.2.0",
    "rollup-plugin-babel-minify": "^10.0.0",
    "rollup-plugin-postcss": "^2.5.0",
    "rollup-plugin-uglify": "^6.0.4",
    "serve": "^11.3.0",
    "stylelint": "^13.2.1",
    "stylelint-config-standard": "^20.0.0"
  }
}
